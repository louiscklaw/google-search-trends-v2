.cards#trending_search_of_hk
  .card_content
    +trending_search('trending search of HK today', {
        trendDate: new Date(),
        geo: 'HK',
      })


.cards#language_trend(category="programming")
  .card_content
    +chart_interest_over_time('language trends\(5 years\)', {
              keyword: ['python','PHP','javascript','Dart','Rust'],
              dayBack: 365 * 5,
            })

.cards#test_vector_map
  .card_content
    +chart_vector_map('donald trump heatmap on earth', {
                keyword: 'Donald Trump',
                startTime: '2017-02-01',
                endTime: '2017-02-06',
                resolution: 'COUNTRY'
              }, 'world-map')

